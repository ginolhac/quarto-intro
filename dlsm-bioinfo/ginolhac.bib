@article{gomez2023,
	AUTHOR = {Gomez Ramos, Borja and Ohnmacht, Jochen and de Lange, Nikola and VALCESCHINI, Elena and GINOLHAC, Aur√©lien and CATILLON, Marie and FERRANTE, Daniele and Rakovic, Aleksandar and HALDER, Rashi and Massart, Fran√ßois and ARENA, Giuseppe and ANTONY, Paul and BOLOGNIN, Silvia and Klein, Christine and KRAUSE, Roland and Schulz, Marcel H and SAUTER, Thomas and Kr√ºger, Rejko and SINKKONEN, Lasse},
	TITLE = {Multiomics analysis identifies novel facilitators of human dopaminergic neuron differentiation},
	LANGUAGE = {English},
